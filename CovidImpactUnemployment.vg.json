{
    "$schema": "https://vega.github.io/schema/vega-lite/v5.json",
    "data": {
        "url": "https://raw.githubusercontent.com/kokbanyap/3179_Assignment2/main/unemployment_dataset.csv"
    },
    "transform": [
        {
            "filter": "datum.RankOf2021 <= 20"
        }
    ],
    "spacing": 0,
    "hconcat": [
        {
            "width": 400,
            "title": "Before Pandemic (2019)",
            "mark": "bar",
            "encoding": {
                "y": {
                    "field": "CountryName",
                    "type": "nominal",
                    "axis": null
                },
                "x": {
                    "field": "2019",
                    "type": "quantitative",
                    "title": "Unemployment Rate (%)",
                    "axis": {
                        "format": "s"
                    },
                    "sort": "descending"
                },
                "xOffset":{"field":"CountryName"},
                "color": {
                    "value": "lightGreen"
                },
                "tooltip": [
                    {
                        "field": "CountryName",
                        "type": "nominal"
                    },
                    {
                        "field": "2019",
                        "type": "quantitative"
                    }
                ]
            }
        },
        {
            "width": 30,
            "view": {
                "stroke": null
            },
            "mark": {
                "type": "text",
                "align": "center"
            },
            "encoding": {
                "y": {
                    "field": "CountryName",
                    "type": "ordinal",
                    "axis": null
                },
                "text": {
                    "field": "CountryName",
                    "type": "nominal"
                }
            }
        },
        {
            "width": 400,
            "title": "During/After Pandemic (2020)",
            "mark": "bar",
            "encoding": {
                "y": {
                    "field": "CountryName",
                    "title": null,
                    "axis": null
                },
                "x": {
                    "field": "2020",
                    "type": "quantitative",
                    "title": "Unemployment Rate (%)",
                    "axis": {
                        "format": "s"
                    }
                },
                "xOffset":{"field":"CountryName"},
                "color": {
                    "value": "darkBlue"
                },
                "tooltip": [
                    {
                        "field": "CountryName",
                        "type": "nominal"
                    },
                    {
                        "field": "2020",
                        "type": "quantitative"
                    }
                ]
            }
        }
    ],
    "config": {
        "view": {
            "stroke": "transparent"
        },
        "axis": {
            "grid": true
        },
        "title": {
            "font": "sans-serif",
            "fontSize": 16
        }
    }
}